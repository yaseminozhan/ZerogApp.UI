@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Anasayfa";
}

<style>
    :root {
        --glass: rgba(173,216,230,0.85);
        --glass-border: rgba(0,0,0,.08);
        --text: #111;
        --accent: #2da6ff;
    }

    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        color: var(--text);
    }

    /* ===== NAVBAR ===== */
    .nav-wrap {
        position: sticky;
        top: 0;
        z-index: 50;
        background: var(--glass);
        -webkit-backdrop-filter: blur(8px);
        backdrop-filter: blur(8px);
        border-bottom: 1px solid var(--glass-border);
    }

    .nav-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 20px 0;
    }

    /* BRAND: sadece yatay logo (metin yok) */
    .brand {
        display: inline-flex;
        align-items: center;
        text-decoration: none;
    }
    /* DEĞİŞTİ: yuvarlak küçük ikon yerine geniş yatay görsel */
    .brand-long {
        height: 80px; /* masaüstü için yükseklik */
        width: auto;
        object-fit: contain; /* kırpma olmasın */
        border-radius: 6px; /* hafif yumuşak köşe */
        box-shadow: 0 1px 8px rgba(0,0,0,.10);
        border: 1px solid rgba(0,0,0,.06);
        background: #fff; /* PNG şeffafsa arkası temiz görünsün */
    }

    .nav-right {
        display: flex;
        align-items: center;
        gap: .6rem;
        flex-wrap: wrap;
    }

    .pill {
        display: flex;
        align-items: center;
        gap: .45rem;
        padding: .5rem .8rem;
        border-radius: 999px;
        border: 1px solid var(--glass-border);
        background: rgba(0,0,0,.03);
        color: #111;
        text-decoration: none;
        white-space: nowrap;
        font-size: .98rem;
    }

        .pill i {
            font-size: 1.1rem;
            color: #111;
        }

    .flag {
        width: 24px;
        height: 16px;
        object-fit: cover;
        border-radius: 2px;
        border: 1px solid rgba(0,0,0,.15);
    }

    .flag-btn {
        border: 0;
        background: transparent;
        padding: 0;
        cursor: pointer;
    }

    /* ===== HERO SLIDER ===== */
    .hero {
        position: relative;
        min-height: 86vh;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

        .hero .strip {
            position: absolute;
            inset: 0;
            display: flex;
            width: 200%;
            animation: slideX 8s infinite ease-in-out;
        }

        .hero .slide {
            width: 50%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

            .hero .slide.first {
                background-image: url("/images/OnForm.jpg");
            }

            .hero .slide.second {
                background-image: url("/images/OnForm2.jpg");
            }

        .hero::after {
            content: "";
            position: absolute;
            inset: 0;
            pointer-events: none;
            background: linear-gradient(180deg,rgba(255,255,255,0) 0%,rgba(255,255,255,.04) 40%,rgba(0,0,0,.20) 100%);
        }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 960px;
        padding: 14vh 16px 16vh;
        margin-left: clamp(0rem,6vw,120px);
        text-align: left;
        color: #111;
        animation: textShow 8s infinite ease-in-out;
    }

    .hero-fixed-text {
        position: absolute;
        top: 20px;
        left: 20px;
        z-index: 10;
        font-size: 1.6rem;
        font-weight: 700;
        color: black;
        text-shadow: 2px 2px 6px rgba(0,0,0,0.6);
        pointer-events: none;
    }

    .hero-content h1 {
        margin: 0 0 .6rem 0;
        color: #111;
        font-weight: 900;
        letter-spacing: .5px;
        text-transform: uppercase;
        text-shadow: none;
        font-size: clamp(2.2rem,4.6vw,4rem);
    }

    .hero-content .subhead {
        color: #111;
        font-weight: 800;
        font-size: clamp(1.1rem,1.4vw,1.6rem);
        opacity: .95;
    }

    .hero-footnotes {
        color: #111;
        opacity: .9;
    }

    .hero-logo {
        position: absolute;
        bottom: 30px;
        left: 30px;
        z-index: 2;
    }

        .hero-logo img {
            max-width: 350px;
            height: auto;
            opacity: .9;
        }

    @@media (max-width:575.98px) {
        .hero-logo img {
            max-width: 100px;
            opacity: .8;
        }

        .brand-long {
            height: 52px;
        }
        /* mobilde biraz küçült */
    }

    /* KEYFRAMES */
    @@keyframes slideX {
        0% {
            transform: translateX(0%);
        }

        40% {
            transform: translateX(0%);
        }

        50% {
            transform: translateX(-50%);
        }

        60% {
            transform: translateX(-50%);
        }

        100% {
            transform: translateX(0%);
        }
    }

    @@keyframes textShow {
        0%, 39% {
            opacity: 1;
            visibility: visible;
        }

        40%, 79% {
            opacity: 0;
            visibility: hidden;
        }

        80%, 100% {
            opacity: 1;
            visibility: visible;
        }
    }

    @@media (max-width:575.98px) {
        .pill span {
            display: none;
        }

        .nav-right {
            gap: .45rem;
        }
    }

    .pill.addr span {
        max-width: 360px;
        display: inline-block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    @@media (min-width:1200px) {
        .pill.addr span {
            max-width: 520px;
        }
    }
</style>


        }

        .services .arrow.next {
            right: 12px;
        }


    /* ===== KEYFRAMES ===== */
    @@keyframes slideX {
        0% {
            transform: translateX(0%);
        }

        40% {
            transform: translateX(0%);
        }

        50% {
            transform: translateX(-50%);
        }

        60% {
            transform: translateX(-50%);
        }

        100% {
            transform: translateX(0%);
        }
    }

    @@keyframes textShow {
        0%, 39% {
            opacity: 1;
            visibility: visible;
        }

        40%, 79% {
            opacity: 0;
            visibility: hidden;
        }

        80%, 100% {
            opacity: 1;
            visibility: visible;
        }
    }


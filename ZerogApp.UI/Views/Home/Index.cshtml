<script>
    (function(){
      const root   = document.getElementById('services');
      const slides = root.querySelector('.slides');
      const prev   = root.querySelector('.arrow.prev');
      const next   = root.querySelector('.arrow.next');
      const items  = slides.querySelectorAll('.slide');
      let index = 0, timer;

      function perView(){
        if (window.matchMedia('(max-width: 575.98px)').matches) return 1; // mobil
        if (window.matchMedia('(max-width: 991.98px)').matches) return 2; // tablet
        return 3; // desktop
      }

      const pageCount = () => Math.ceil(items.length / perView());

      function go(i){
        const pages = pageCount();
        index = (i + pages) % pages;
        slides.scrollTo({ left: index * slides.clientWidth, behavior: 'smooth' });
      }

      function start(){ timer = setInterval(()=> go(index + 1), 3500); }
      function stop(){ clearInterval(timer); }

      next.addEventListener('click', ()=> { stop(); go(index + 1); start(); });
      prev.addEventListener('click', ()=> { stop(); go(index - 1); start(); });

      const hoverArea = root.querySelector('.slider');
      hoverArea.addEventListener('mouseenter', stop);
      hoverArea.addEventListener('mouseleave', start);

      window.addEventListener('resize', ()=> go(index));

      start();
    })();
</script>

